<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Roave\EmailTemplates\Entity\TemplateEntity" table="roave_email_templates"
            repository-class="Roave\EmailTemplates\Repository\TemplateRepositoryFactory">

        <unique-constraints>
            <unique-constraint columns="id,locale"/>
        </unique-constraints>

        <id name="id" type="string"/>

        <field name="updateParams" type="boolean" nullable="false"/>
        <field name="locale" type="string" nullable="true"/>
        <field name="params" type="array" nullable="true"/>
        <field name="subject" type="string"/>
        <field name="textBody" type="text"/>
        <field name="htmlBody" type="text"/>
        <field name="description" type="text" nullable="true"/>

        <!-- Dates -->
        <field name="createdAt" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>
        <field name="paramsUpdatedAt" type="datetime">
            <gedmo:timestampable on="update" field="params"/>
        </field>
    </entity>
</doctrine-mapping>
